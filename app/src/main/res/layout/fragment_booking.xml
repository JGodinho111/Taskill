<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/taskill_secondary_color"
    android:backgroundTint="@color/taskill_secondary_color"
    tools:context=".ui.BookingFragment">


    <Button
        android:id="@+id/date_time_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/taskill_main_color"
        android:backgroundTint="@color/taskill_main_color"
        android:hint="SELECT DATE AND TIME"
        android:inputType="none"
        app:layout_constraintBottom_toTopOf="@+id/text_with_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/text_with_date"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="300dp"
        android:text="Data e Hora escolhida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:background="@color/taskill_main_color"
        android:backgroundTint="@color/taskill_main_color"
        android:hint="CONFIRM"
        android:inputType="none"
        android:translationY="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_with_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
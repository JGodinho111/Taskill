    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMenuBar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/menu"
            android:textAllCaps="true"
            android:textColor="@color/taskill_secondary_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.517" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/imageButtonLogout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonSettings"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonSettings"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonServices"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/services"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonMarketplace"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonMarketplace"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/marketplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonServices"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="@+id/imageButtonServices"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonServices"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonSettings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonMarketplace"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMarketplace"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonHelp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/taskill_main_color"
        android:src="@drawable/help"
        app:layout_constraintStart_toStartOf="@+id/imageButtonProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonProfile"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>